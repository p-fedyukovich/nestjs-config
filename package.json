{
  "name": "nestjs-node-config-module",
  "version": "1.0.1",
  "description": "NestJS Config module based on node config",
  "author": "Pavel Fediukovich",
  "license": "MIT",
  "main": "dist/index.js",
  "url": "https://github.com/p-fedyukovich/nestjs-config#readme",
  "keywords": [
    "nestjs",
    "config",
    "typescript",
    "nestjs-library",
    "node-config"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "prepublish:yarn": "yarn build",
    "publish:yarn": "yarn publish --access public",
    "prepublish:next": "yarn build",
    "publish:next": "yarn publish --access public --tag next",
    "test": "jest --runInBand",
    "test:e2e": "jest --config ./tests/jest-e2e.json --runInBand",
    "test:e2e:dev": "jest --config ./tests/jest-e2e.json --runInBand --watch",
    "prerelease": "npm run build",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-angular": "11.0.0",
    "@nestjs/common": "8.0.6",
    "@nestjs/testing": "8.0.6",
    "@types/chai": "^4.2.21",
    "@types/config": "^0.0.41",
    "@types/jest": "27.0.1",
    "@types/node": "16.11.36",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "chai": "4.3.4",
    "config": "^3.3.7",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "husky": "4.3.6",
    "jest": "27.2.0",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "reflect-metadata": "0.1.13",
    "release-it": "14.11.5",
    "rxjs": "7.3.0",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0",
    "config": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/p-fedyukovich/nestjs-config"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
